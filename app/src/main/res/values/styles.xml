<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="simpleAlertDialogStyle">@style/SimpleAlertDialogStyle</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_normal</item>
    </style>

    <style name="AppButtonStyle.Accent" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppButtonStyle.Attention" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_attention</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView" />
    <style name="AppTextViewStyle.Normal" parent="android:Widget.TextView" />
    <style name="AppTextViewStyle.Light" parent="android:Widget.TextView" />

    <style name="SimpleAlertDialogStyle" parent="Theme.SimpleAlertDialog.Light" />

    <style name="AppTextViewStyle.DetailHeader" parent="AppTextViewStyle.Normal">
        <item name="android:textColor">@color/text_detail_header</item>
    </style>

    <style name="AppTextViewStyle.DetailBody" parent="AppTextViewStyle.Light">
        <item name="android:textColor">@color/text_detail_body</item>
    </style>

</resources>
