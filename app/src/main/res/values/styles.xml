<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionBarStyle">@style/AppActionBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppActionOverflowButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="simpleAlertDialogStyle">@style/SimpleAlertDialogStyle</item>
    </style>

    <style name="AppActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/actionbar_background</item>
        <item name="titleTextStyle">@style/AppActionBarTitleTextStyle</item>
    </style>

    <style name="AppActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="AppActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="AppButtonStyle.Accent" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppButtonStyle.Attention" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_attention</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppButtonStyle.List" parent="AppButtonStyle">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/selectable_background_list</item>
        <item name="android:textColor">@color/text_list</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView" />

    <style name="AppTextViewStyle.Normal" parent="android:Widget.TextView" />

    <style name="AppTextViewStyle.Light" parent="android:Widget.TextView" />

    <style name="SimpleAlertDialogStyle" parent="Theme.SimpleAlertDialog.Light">
        <item name="sadTitleSeparatorBackground">@drawable/dialog_title_separator</item>
        <item name="sadTitleSeparatorHeight">2dp</item>
        <item name="sadTitleTextStyle">@style/SimpleAlertDialogTitleTextStyle</item>
    </style>

    <style name="SimpleAlertDialogTitleTextStyle">
        <item name="android:textColor">@color/text_dialog_title</item>
    </style>

    <style name="AppTextViewStyle.Start" parent="AppTextViewStyle.Light">
        <item name="android:textColor">@color/text_start</item>
        <item name="android:textSize">@dimen/text_size_start</item>
    </style>

    <style name="AppTextViewStyle.DetailHeader" parent="AppTextViewStyle.Normal">
        <item name="android:textColor">@color/text_detail_header</item>
    </style>

    <style name="AppTextViewStyle.DetailBody" parent="AppTextViewStyle.Light">
        <item name="android:textColor">@color/text_detail_body</item>
    </style>

    <style name="AppTextViewStyle.ListHeader" parent="AppTextViewStyle.Normal">
        <item name="android:textColor">@color/text_list_header</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/margin_standard</item>
        <item name="android:paddingBottom">@dimen/margin_extra_short</item>
    </style>

</resources>
