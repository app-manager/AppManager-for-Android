<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 16 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/AppActionOverflowButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
    </style>

    <style name="AppActionBarStyle" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/AppActionBarTitleTextStyle</item>
    </style>

    <style name="AppActionBarTitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppActionOverflowButtonStyle" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_normal</item>
    </style>

    <style name="AppButtonStyle.Accent" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppButtonStyle.Attention" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_attention</item>
        <item name="android:textColor">@color/button_text_accent</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTextViewStyle.Normal" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTextViewStyle.Light" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTextViewStyle.DetailHeader" parent="AppTextViewStyle.Normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_detail_header</item>
    </style>

    <style name="AppTextViewStyle.DetailBody" parent="AppTextViewStyle.Light">
        <item name="android:textColor">@color/text_detail_body</item>
    </style>

</resources>
